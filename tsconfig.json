{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "incremental": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": false
  },
  "exclude": ["node_modules", "dist"]
}
