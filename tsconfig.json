{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "rewriteRelativeImportExtensions": true
  }
}
